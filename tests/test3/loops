int sumToN(int n)
{
    int i = 0;
    int sum = 0;

    while (i <= n)
    {
        // replace (i % 2 == 0) with remainder expression
        if ((i - (i / 2) * 2) == 0)
            sum = sum + i;
        else
            sum = sum + (i * 2);
        i = i + 1;

        while(true) {
            if (sum>0)
                break;
            else
                if (i==0)
                    sum = sum*sum;
                else
                    sum = sum*2;
        }
    }
    return sum;
}

int main()
{
    int result;
    result = sumToN(10);
    return result;
}
