int square(int x) {
    return x * x;
}

int hypSqrd(int a, int b)
{
    return square(a) + square(b);
}

int perimeter(int a, int b)
{
    int c;
    c = hypSqrd(a, b);
    return a + b + c;
}

int main()
{
    int h, p;
    h = hypSqrd(3 + 1, 2 * 2);
    p = perimeter(3, 4);                 // perimeter uses hypotenuseSquared inside
    return h + p;
}
